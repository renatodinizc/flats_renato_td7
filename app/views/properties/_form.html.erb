<%= form_with model: property do |f| %>
<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= property.errors.full_messages_for(:title)[0] %>
</div>
<div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= property.errors.full_messages_for(:description)[0] %>
</div>
<div>
    <%= f.label :rooms %>
    <%= f.text_field :rooms %>
    <%= property.errors.full_messages_for(:rooms)[0] %>
</div>
<div>
    <%= f.label :bathrooms %>
    <%= f.text_field :bathrooms %>
    <%= property.errors.full_messages_for(:bathrooms)[0] %>
</div>
<div>
    <%= f.label :daily_rate %>
    <%= f.text_field :daily_rate %>
    <%= property.errors.full_messages_for(:daily_rate)[0] %>
</div>
<div>
    <%= f.label :property_type_id %>
    <%= f.collection_select :property_type_id, PropertyType.all, :id, :name %>
</div>
<div>
    <%= f.label :property_region_id %>
    <%= f.collection_select :property_region_id, PropertyRegion.all, :id, :name %>
</div>
<div>
    <%= f.label :parking_spot %>
    <%= f.check_box :parking_spot %>
</div>
<div>
    <%= f.label :pet_friendly %>
    <%= f.check_box :pet_friendly %>
</div>
<div>
    <%= f.submit 'Cadastrar' %>
</div>
<% end %>